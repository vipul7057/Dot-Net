<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="318" Width="564">
    <Grid>
        <Label x:Name="lblMessage" Content="Label" HorizontalAlignment="Left" Margin="33,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.684,0.462"/>
        <Button x:Name="btnMessage" Content="Show Message" HorizontalAlignment="Left" Margin="31,83,0,0" VerticalAlignment="Top" Width="149" Height="25" RenderTransformOrigin="0.5,0.5" Click="btnMessage_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.177"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
